<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.V0.AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.V0.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor" tools:targetApi="21">@color/colorNavigationBar</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#89000000</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar"/>
    <style name="Toolbar.TitleTextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Common -->
    <style name="Common">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!-- Buttons -->
    <style name="Button">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <!-- Form input field-->
    <style name="TextInputField">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="Text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitles">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSubtitles">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextHelp">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text1">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text2">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Spinner -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinnerItemNothingSelectedStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/selector_spinner_item</item>

    </style>

</resources>
