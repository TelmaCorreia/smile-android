<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.V0.AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="colorControlNormal">@color/colorDividerGrey</item>
        <item name="colorControlActivated">@color/colorDividerGrey</item>
        <item name="colorControlHighlight">@color/colorDividerGrey</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:selectableItemBackground">@drawable/spinner_item_bg_pressed</item>

    </style>

    <style name="Base.V0.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/colorNavigationBar</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="AppTheme.DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#89000000</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>
    <style name="Toolbar.TitleTextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="Tabs">
        <item name="android:background">@color/colorNavigationBar</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorButtonBackground</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabIndicatorColor">@color/colorYellow</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4.0dip</item>
    </style>

    <!-- Common -->
    <style name="Common">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!-- Buttons -->
    <style name="Button">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="DialogButton">
        <item name="android:textColor">@color/colorUnderline</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <!-- Form input field-->
    <style name="TextInputField" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="colorAccent">@color/colorTextGrey</item>
        <item name="colorPrimary">@color/colorTextGrey</item>
        <item name="colorControlNormal">@color/colorDividerGrey</item>
        <item name="colorControlActivated">@color/colorDividerGrey</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorDividerGrey</item>
        <item name="colorControlNormal">@color/colorDividerGrey</item>
        <item name="colorControlActivated">@color/colorDividerGrey</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextTitles">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSubtitles">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextHelp">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text1">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text2">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text3">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text4">
        <item name="android:textColor">@color/colorNavigationBar</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/colorBackgroundGrey</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="Text5">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Text6">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text7">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text8">
        <item name="android:textColor">@color/colorNavigationBar</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text9">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text10">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text11">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextNavigationBottomBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewToolbarTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Spinner -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@drawable/selector_spinner_item</item>
    </style>

    <style name="spinnerItemNothingSelectedStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_spinner_item</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="colorControlNormal">@color/colorDividerGrey</item>
        <item name="colorControlActivated">@color/colorDividerGrey</item>
        <item name="colorControlHighlight">@color/colorDividerGrey</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Switch -->
    <style name="Switch">
        <item name="thumbTint">@color/colorWhite</item>
        <item name="trackTint">@color/switch_color</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDividerGrey</item>
    </style>
</resources>
